#!/bin/bash
### BEGIN INIT INFO
# Provides:          disable-thp
# Required-Start:    $local_fs
# Required-Stop:
{% if disable_thp_before_service is defined %}
# X-Start-Before:    {{ disable_thp_before_service }}
{% endif %}
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Disable Linux transparent huge pages
# Description:       Disable Linux transparent huge pages, to improve
#                    database performance.
### END INIT INFO

case $1 in
  start)

    echo 'never' > /sys/kernel/mm/transparent_hugepage/enabled
    echo 'never' > /sys/kernel/mm/transparent_hugepage/defrag

    ;;
  status)

    read e_always e_madvise e_never < /sys/kernel/mm/transparent_hugepage/enabled
    read d_always d_defer d_madvise d_never < /sys/kernel/mm/transparent_hugepage/defrag

    if [ "$e_never" != "[never]" ] || [ "$d_never" != "[never]" ]; then
      exit 1
    fi

    echo "OK"
    exit 0
    ;;
esac
